<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@color/screenBackground">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_world_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2"
            android:id="@+id/textView2"
            android:textColor="@android:color/white"
            android:textSize="72sp"
            android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:text="random"
            android:onClick="randomMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/random_button" android:layout_marginTop="84dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/buttonBackground"
            app:layout_constraintVertical_bias="0.197"
            app:layout_constraintStart_toEndOf="@+id/count_button3" app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:text="toast"
            android:onClick="toastMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toast_button2"
            android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="8dp"
            android:background="@color/buttonBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.255"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/count_button3"/>
    <Button
            android:text="count"
            android:onClick="countMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/count_button3"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/buttonBackground"
            app:layout_constraintVertical_bias="0.424"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/random_button"
            app:layout_constraintStart_toEndOf="@+id/toast_button2" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:text="clean"
            android:onClick="cleanMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/count_button3"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/buttonBackground"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

</android.support.constraint.ConstraintLayout>